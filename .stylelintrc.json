{
  "extends": [
    "stylelint-config-standard"
  ],
  "plugins": [
    "stylelint-order"
  ],
  "rules": {
    "at-rule-no-unknown": [
      true,
      {
        "ignoreAtRules": [
          "theme",
          "apply",
          "layer",
          "responsive",
          "screen",
          "variants",
          "tailwind",
          "components",
          "utilities",
          "base"
        ]
      }
    ],
    "property-no-unknown": [
      true,
      {
        "ignoreProperties": [
          "line-clamp"
        ]
      }
    ],
    "function-no-unknown": [
      true,
      {
        "ignoreFunctions": [
          "theme",
          "screen"
        ]
      }
    ],
    "value-keyword-case": null,
    "custom-property-pattern": null,
    "selector-class-pattern": null,
    "order/properties-alphabetical-order": true
  }
}